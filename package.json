{
  "name": "graph-cinema",
  "private": false,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "deploy": "npm run build && wrangler deploy",
    "lint": "eslint .",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -r 0 -s",
    "preview": "vite preview",
    "test-watch": "vitest",
    "test": "vitest run",
    "checks": "npm run format && npm run lint && npm run test",
    "prepare": "husky",
    "dev-server": "wrangler dev"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,vue,astro,svelte,json,md}": [
      "prettier --write",
      "eslint ."
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@excalidraw/excalidraw": "^0.18.0-54a9826",
    "@excalidraw/mermaid-to-excalidraw": "^2.0.0",
    "@google/genai": "^1.34.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "text-to-mermaid": "^0.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.18",
    "wrangler": "^4.63.0"
  }
}
